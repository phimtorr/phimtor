package ui

templ h2(title string, rightComponent templ.Component) {
	<div class="flex items-center justify-between mt-2">
		<div class="p-4 border-l-2 border-red-700">
			<h2 class="font-bold text-2xl">{ title }</h2>
		</div>
		<div>
			@rightComponent
		</div>
	</div>
}

templ primaryButton(label string, attrs templ.Attributes) {
	<button
		class="rounded-sm bg-red-600 px-4 py-2 text-slate-100 shadow-md shadow-stone-900 hover:bg-red-700"
		{ attrs... }
	>
		{ label }
	</button>
}
